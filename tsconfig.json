{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ngxpixi": [
        "dist/ngxpixi"
      ],
      "ngxpixi/*": [
        "dist/ngxpixi/*"
      ],
      "pixi.js": ["node_modules/pixi.js"],
      "pixi.js/*": ["node_modules/pixi.js/*"]
    }
  }
}
